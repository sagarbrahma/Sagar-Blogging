
<%- include('layouts/header') %>

    <body id="page-top">

        <!-- Page Wrapper -->
        <div id="wrapper">

            <%- include('layouts/sidebar') %>


                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Main Content -->
                    <div id="content">

                        <%- include('layouts/topnav') %>



                            <!-- Begin Page Content -->
                            <div class="container-fluid">

                                <!-- Page Heading -->
                                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                    <h1 class="h3 mb-0 text-gray-800"> Blogs</h1>
                                </div>
                               


                                <!-- DataTales Example -->
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3">
                                        <h6 class="m-0 font-weight-bold text-primary">Blog-List</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered" id="dataTable" width="100%"
                                                cellspacing="0">
                                                <thead>
                                                    <tr>
                                                        <th>Image</th>
                                                        <th>Title</th>
                                                        <th>Written By</th>
                                                        <th>Content</th>
                                                        <th>Publish date</th>
                                                        <th>Category</th>
                                                        <th>Username</th>
                                                        <th>Status</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tfoot>
                                                    <tr>
                                                        <th>Image</th>
                                                        <th>Title</th>
                                                        <th>Written By</th>
                                                        <th>Content</th>
                                                        <th>Publish date</th>
                                                        <th>Category</th>
                                                        <th>Username</th>
                                                        <th>Status</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </tfoot>
                                                <tbody>
                                                    <% BlogDetails.map(data=>{ %>
                                                        <tr>
                                                            <td> <img src="/uploads/<%= data.image %>" width="75px"
                                                                    height="75px" class="image"></td>
                                                            <td>
                                                                <%= data.title %>
                                                            </td>
                                                            <td>
                                                               
                                                                        <%= data.name %>
                                                                   
                                                            </td>
                                                            <td>
                                                                <%- data.content.slice(0,100)+" ........" %>


                                        </td>
                                        <td>
                                            <%= moment(data.date).format('DD/MM/YY') %>
                                        </td>
                                        <td>
                                            <%= data.category.categoryName %>
                                        </td>
                                       <td> <%= data.user.userName %></td>
                                        <% if(data.status) {%>
                                            <td>
                                                <a href="/admin/deactivated_blogs/<%= data._id %>"
                                                    class="btn btn-warning ">Deactive</a>
                                            </td>
                                            <% } else{%>
                                                <td>
                                                    <a href="/admin/activated_blogs/<%= data._id %>"
                                                        class="btn btn-success ">Active</a>
                                                </td>
                                                <% } %>
                                                    <td>
                                                       
                                                        <a href="/admin/delete-blogs/<%= data._id %>"
                                                            class="btn btn-danger ">
                                                            Delete
                                                        </a>
                                                    </td>
                                                    </tr>
                                                    <% }) %>
                                                        </tbody>
                                                        </table>
                                    </div>
                                </div>
                            </div>

                    </div>


                    <!-- /.container-fluid -->


                </div>

                <!-- End of Main Content -->

                <%- include('layouts/siteFooter') %>

               

        </div>
        <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <%- include('layouts/footer') %>
       