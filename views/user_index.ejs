<%- include("partial/header.ejs") %>
<%- include("partial/header-top.ejs") %>

        <!-- login-page -->
        <div class="login">
            <div class="login-grids">
                <div class="col-md-6 log">
                    <h3>Login</h3>
                    <% if(message.length > 0) {%>
                        <div class="<%- alert %>">
                            <%- message %>
                        </div>
                        <% } %>
                    <p>Welcome, please enter the following to continue.</p>
                    <form class="user" action="/login" method="post">
                        <h5>User Name:</h5>
                        <input type="text" name="email" id="email">
                        <h5>Password:</h5>
                        <input type="password" name="password" id="password"><br>
                        <input type="checkbox" name="rememberme">
                        <label>Keep me logged in</label> <br>
                        <hr>
                        <input type="submit" value="Login">

                    </form>
                    <a href="/forgot">Forgot Password ?</a>
                </div>
                <div class="col-md-6 login-right">
                    <h3>New Registration</h3>
                    <p>By creating an account with our blog website, you will be able to move through the write your
                        stories and reach people like you.</p>
                    <a href="/show-user-registration-form" class="hvr-bounce-to-bottom button">Create An Account</a>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <!-- //login-page -->

        <%- include("partial/footer.ejs") %>